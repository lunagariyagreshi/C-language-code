// print sum of series 1-2+3-4+5-...

#include<stdio.h>
void main(){
    int a,sum=0,i=1;
    printf("Enter the value of a");
    scanf("%d",&a);
    while(i<=a){
        if(i%2==0){
            sum=sum-i;
        } else {
            sum=sum+i;
        }
        i++;
    }
    printf("sum=%d",sum);
}
