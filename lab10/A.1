// find out sum of first and last digit of given number.

#include<stdio.h>
void main(){
    int a,rem,sum=0,reverse=0,lastdigit,firstdigit;
    printf("Enter the value of a");
    scanf("%d",&a);
        lastdigit=a%10;
        printf("last digit=%d\t",lastdigit);
       while(a>0){
        rem=a%10;
        reverse=reverse*10 + rem;
        a=a/10;
       }
       firstdigit=reverse%10;
       printf("firstdigit=%d\n",firstdigit);

       sum=lastdigit+firstdigit;
       printf("sum=%d",sum);
}
